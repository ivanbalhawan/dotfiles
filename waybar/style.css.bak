    color: @Green;
    /*border: 2px solid #a6e3a1;*/
    /*background-color: #a6e3a1;*/
    padding-top: 1px;
    padding-bottom: 1px;
    /*background-color: #a6e3a1;*/
    border-radius: 4px;
    /*box-shadow: 0px 0px 3px 1px #a6e3a1;*/
    /*box-shadow: inset 0px 0px 3px 2px #a6e3a1;*/
    /*box-shadow: inset 0 -3px #a6e3a1;*/
}

#battery.full {
    color: @Green;
    /*border: 2px solid #a6e3a1;*/
    border-radius: 4px;
    /*box-shadow: inset 0px 0px 3px 2px #a6e3a1;*/
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: #000000;
    }
}

