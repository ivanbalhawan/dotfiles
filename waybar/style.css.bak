/* Catppuccin mocha color scheme */
@define-color Rosewater rgb(245, 224, 220);
@define-color Flamingo rgb(242, 205, 205);
@define-color Pink rgb(245, 194, 231);
@define-color Mauve rgb(203, 166, 247);
@define-color Red rgb(243, 139, 168);
@define-color Maroon rgb(235, 160, 172);
@define-color Peach rgb(250, 179, 135);
@define-color Yellow rgb(249, 226, 175);
@define-color Green rgb(166, 227, 161);
@define-color Teal rgb(148, 226, 213);
@define-color Sky rgb(137, 220, 235);
@define-color Sapphire rgb(116, 199, 236);
@define-color Blue rgb(137, 180, 250);
@define-color Lavender rgb(180, 190, 254);
@define-color Text rgb(205, 214, 244);
@define-color Subtext1 rgb(186, 194, 222);
@define-color Subtext0 rgb(166, 173, 200);
@define-color Overlay2 rgb(147, 153, 178);
@define-color Overlay1 rgb(127, 132, 156);
@define-color Overlay0 rgb(108, 112, 134);
@define-color Surface2 rgb(88, 91, 112);
@define-color Surface1 rgb(69, 71, 90);
@define-color Surface0 rgb(49, 50, 68);
@define-color Base rgb(30, 30, 46);
@define-color Mantle rgb(24, 24, 37);
@define-color Crust rgb(17, 17, 27);

* {
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: FontAwesome, Iceberg, FiraCode, Goldman, Gruppo, terminus, Roboto, Helvetica, Arial, sans-serif;
    font-weight: normal;
    font-size: 12px;
}

window#waybar {
    background-color: @Crust;
    transition-property: background-color;
    transition-duration: .5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

/*
window#waybar.empty {
    background-color: transparent;
}
window#waybar.solo {
    background-color: #FFFFFF;
}
*/

window#waybar.termite {
    background-color: #3F3F3F;
}

window#waybar.chromium {
    background-color: #000000;
    border: none;
}

#workspaces button {
    font-size: 14px;
    /*font-weight: bold;*/
    /*padding: 0 0px;*/
    padding-left: 0px;
    padding-right: 0px;
    padding-top: 0px;
    padding-bottom: 0px;
    background-color: transparent;
    color: @Red;
    /*color: #83a598;*/
    /* Use box-shadow instead of border so the text isn't offset */
    /* box-shadow: inset 0 -3px transparent; */
    /* Avoid rounded borders under each workspace name */
    border: 2px solid @Red;
    border-radius: 6px;
    /*margin-top: 2px;*/
    /*margin-bottom: 2px;*/
    margin-left: 2px;
    margin-right: 2px;
    margin-bottom: 2px;
    margin-top: 2px;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
#workspaces button:hover {
    color: @Peach;
    border: 2px solid @Peach;
    /* background: rgba(0, 0, 0, 0.6); */
    /*box-shadow: inset 0 -0px transparent; */
    box-shadow: none;
}

#workspaces button.focused {
    color: @Crust;
    border: 2px solid @Red;
    background-color: @Red;
    /*background-color: #ffffff;*/
    /*color: rgba(0, 7, 0, 1);*/
    /* box-shadow: inset 0 -3px #ffffff; */
}

#workspaces button.urgent {
    background-color: @Yellow;
    border: 2px solid @Yellow;
    color: @Crust;
}

#mode {
    background-color: #64727D;
    border-bottom: 3px solid #ffffff;
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#mpd {
    padding: 0 10px;
    color: #ffffff;
}

#window,
#workspaces {
    font-family: Gruppo;
    background-color: transparent;
    border-radius: 0px;
    /*padding-bottom: 8px;*/
    /*border-bottom: 1px solid black;*/
    margin-top: 2px;
    /*margin-bottom: 8px;*/
    margin-left: 0px;
    
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left: 20px;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

#clock {
    font-family: Iceberg;
    font-size: 14px;
    font-weight: bold;
    /*color: #83a598;*/
    color: @Red;
    margin-top: 4px;
    margin-bottom: 4px;
    /* background-color: #64727D; */
